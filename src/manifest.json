{
  "manifest_version": 2,
  "name": "sk",
  "version": "1.0",

  "description": "Notify you when your eyes should get rest",
  "icons": {
     "128": "img/logo-128.png",
     "16": "img/logo-16.png",
     "48": "img/logo-48.png"
  },

  "browser_action": {
     "default_icon": "img/popup-icon-on-19.png",
     "default_title": "Sight keeper",
     "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },

  "permissions": [
    "idle",
    "notifications",
    "background",
    "alarms"
  ]

}
